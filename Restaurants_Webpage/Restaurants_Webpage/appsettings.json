    "ComplaintStatus": {
      "New": "NEW",
      "Accepted": "ACCEPTED",
      "Pending": "PENDING",
      "Rejected": "REJECTED"
    },
    "ComplaintActions": {
      "Consider": "consider",
      "Accept": "accept",
      "Reject": "reject"
