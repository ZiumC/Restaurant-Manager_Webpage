      "Complaints": "/api/manage/Complaints",
      "Employees": "/api/manage/Employees",
      "Restaurants": "/api/manage/Restaurants"
    },
    "Paths": {
      "Login": "/login",
      "Register": "/register",
      "Reservation": "/reservation",
      "Restaurant": "/restaurants"
