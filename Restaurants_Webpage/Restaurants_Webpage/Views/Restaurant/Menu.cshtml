@using Restaurants_Webpage.Models.ClientModels.Restaurant;
@model IEnumerable<RestaurantMenuModel>;

@{
    if (Model == null)
    {
        ViewData["Title"] = "Menu of restaurant not found...";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="background-page">
        <h1 class="title-text">Menu of restaurant:</h1>
        <div class="line-black"></div>

        <div class="text-center">
            <h4>@Html.Raw(TempData["UrlError"])</h4>
            <h4>@Html.Raw(TempData["UrlStatusCode"])</h4>
        </div>

        @if (Model == null)
        {
            <div class="text-center">
                <h4>There is nothing to show.</h4>
            </div>
        }
        else
        {
            <table class="table table-striped text-center menu-table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Dish name</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Jacob</td>
                        <td>Thornton</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Larry</td>
                        <td>the Bird</td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</body>
</html>