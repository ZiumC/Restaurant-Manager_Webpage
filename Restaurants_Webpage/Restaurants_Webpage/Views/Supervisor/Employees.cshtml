@using Restaurants_Webpage.Models.UserModels.EmployeeModels;
@model IEnumerable<EmployeeModel>;

@{
    ViewData["Title"] = $"All employees";
    string collapse = "collapse_";
    string heading = "heading_";

    var employees = Model;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="background-page">
        <h1 class="title-text">Employees from all restaurants</h1>
        <div class="line-black"></div>
        @{
            if (employees == null || employees.Count() == 0)
            {
                <div class="text-center">
                    <h4>Employees not found.</h4>
                </div>
            }
            else
            {
                foreach (var employee in employees)
                {
                    <div class="card">
                        <div class="header-card" id="@(heading + employee.IdEmployee)">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" data-target="@("#" + collapse + employee.IdEmployee)" aria-expanded="false" aria-controls="@(collapse+ employee.IdEmployee)">

                                    <table class="table-card-body-4-col table-restaurant-header">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <h5>First name:</h5>
                                                </th>
                                                <th>
                                                    <h5>Last name:</h5>
                                                </th>
                                                <th>
                                                    <h5>Salary: (PLN)</h5>
                                                </th>
                                                <th>
                                                    <h5>Certificates:</h5>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="employee-data">@employee.FirstName</td>
                                                <td class="employee-data">@employee.LastName</td>
                                                <td class="employee-data">@String.Format("{0:0.00}", employee.Salary)</td>
                                                @if (employee.Certificates != null)
                                                {
                                                    <td class="employee-data">@employee.Certificates.Count()</td>
                                                }
                                                else
                                                {
                                                    <td class="employee-data">0</td>
                                                }
                                            </tr>
                                        </tbody>
                                    </table>
                                </button>
                            </h5>
                        </div>
                        <div id="@(collapse + employee.IdEmployee)" class="collapse" aria-labelledby="@(heading + employee.IdEmployee)" data-parent="#accordion">
                            <div class="line-black"></div>
                            <div class="card-body">

                                <table class="table-card-body-2-col table-restaurant">
                                    <thead>
                                        <tr class="text-center">
                                            <th>
                                                <h5>Employee details:</h5>
                                            </th>
                                            <th>
                                                <h5>Employee certificates:</h5>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-center">
                                        <tr>
                                            <td class="text-center">
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <p>Bonus:</p>
                                                        </td>
                                                        <td>
                                                            <div class="input-group table-width-medium-center">
                                                                <input class="form-control" type="text" value="@employee.BonusSalary PLN" disabled>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </table>

                                                <p class="data-form">Promotion date:</p>
                                                <div class="input-group table-width-medium-center">
                                                    <input class="form-control" type="text" value="@employee.FirstPromotionChefDate" disabled>
                                                </div>
                                                <p class="data-form">Hired date:</p>
                                                <div class="input-group table-width-medium-center">
                                                    <input class="form-control" type="text" value="@employee.HiredDate" disabled>
                                                </div>
                                                <p class="data-form">PESEL:</p>
                                                <div class="input-group table-width-medium-center">
                                                    <input class="form-control" type="text" value="@employee.PESEL" disabled>
                                                </div>
                                            </td>
                                            <td>
                                                <p>...</p>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <thead>
                                        <tr class="text-center">
                                            <th>
                                                <h5>Actions:</h5>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-center">
                                        <tr>
                                            <td>
                                                <form asp-controller="" asp-action="" method="post">
                                                    <input type="submit" value="Edit" class="btn btn-warning btn-functional action-menu" />
                                                </form>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
</body>
</html>